{
  "openapi": "3.1.0",
  "info": {
    "title": "API Bidang",
    "version": "1.0.0",
    "description": "Dokumentasi endpoint untuk membuat bidang."
  },
  "servers": [
    {
      "url": "{{url}}"
    }
  ],
  "paths": {
    "/v1/bidang": {
      "post": {
        "summary": "Create bidang",
        "description": "Membuat bidang baru.",
        "security": [
          {
            "basicAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "kode_lokasi": { "type": "string" },
                  "nomor_sertifikat": { "type": "string" },
                  "tanggal_terbit_sertifikat": { "type": "string", "format": "date-time" },
                  "nib": { "type": "string" },
                  "nomor_surat_ukur": { "type": "string" },
                  "luas_bidang_hpl": { "type": "number" },
                  "kode_bidang": { "type": "string" },
                  "bidang_id": { "type": "integer" },
                  "perolehan_id": { "type": "integer" },
                  "created_at": { "type": "string", "format": "date-time" },
                  "created_by": { "type": "string" }
                },
                "required": [
                  "kode_lokasi",
                  "nomor_sertifikat",
                  "tanggal_terbit_sertifikat",
                  "nib",
                  "nomor_surat_ukur",
                  "luas_bidang_hpl",
                  "kode_bidang",
                  "bidang_id",
                  "perolehan_id",
                  "created_at",
                  "created_by"
                ]
              },
              "example": {
                "kode_lokasi": "KODE2xax",
                "nomor_sertifikat": "SERT789xxwalaweeexx",
                "tanggal_terbit_sertifikat": "2025-07-03T08:53:07+07:00",
                "nib": "NIB123456",
                "nomor_surat_ukur": "SU-001",
                "luas_bidang_hpl": 1000.5,
                "kode_bidang": "BID001",
                "bidang_id": 1,
                "perolehan_id": 2,
                "created_at": "2025-07-03T08:53:07+07:00",
                "created_by": "admin"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" },
                    "message": { "type": "string" },
                    "data": {
                      "type": "object",
                      "properties": {
                        "kode_bidang": { "type": "string" },
                        "bidang_id": { "type": "integer" },
                        "kode_lokasi": { "type": "string" },
                        "perolehan_id": { "type": "integer" },
                        "nomor_sertifikat": { "type": "string" },
                        "tanggal_terbit_sertifikat": { "type": "string" },
                        "nib": { "type": "string" },
                        "nomor_surat_ukur": { "type": "string" },
                        "luas_bidang_hpl": { "type": "number" },
                        "created_at": { "type": "string" },
                        "created_by": { "type": "string" }
                      }
                    }
                  }
                },
                "examples": {
                  "success": {
                    "value": {
                      "status": "00",
                      "message": "success",
                      "data": {
                        "kode_bidang": "BID001",
                        "bidang_id": 1,
                        "kode_lokasi": "KODE2xax",
                        "perolehan_id": 2,
                        "nomor_sertifikat": "SERT789xxwalaweeexx",
                        "tanggal_terbit_sertifikat": "2025-07-03T08:53:07+07:00",
                        "nib": "NIB123456",
                        "nomor_surat_ukur": "SU-001",
                        "luas_bidang_hpl": 1000.5,
                        "created_at": "2025-07-03T08:53:07+07:00",
                        "created_by": "admin"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "perolehan_id not found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" },
                    "message": { "type": "string" },
                    "traceId": { "type": "string" }
                  }
                },
                "examples": {
                  "perolehan_id not found": {
                    "value": {
                      "status": "ISTN05",
                      "message": "perolehan_id not found",
                      "traceId": "73a5504d-77ec-4574-81ad-a28ae52cd666"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "basicAuth": {
        "type": "http",
        "scheme": "basic"
      }
    }
  }
}